{
  "manifest_version": 2,
  "name": "Tab Switcher",
  "version": "1.0",
  "description": "Switch between tabs with Ctrl+Q or Ctrl+Shift+Y",

  "permissions": [
    "tabs",
    "activeTab",
    "notifications"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "commands": {
    "open-tab-switcher": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      },
      "description": "Open tab switcher"
    },
    "open-tab-switcher-ctrl-q": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
      },
      "description": "Open tab switcher (Ctrl+Q)"
    }
  }
}
